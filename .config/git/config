[user]
	name = Prateek Ganguli
	email = prateek.ganguli@gmail.com
	signingkey = prateek.ganguli@gmail.com
[core]
	editor = nvim
[alias]
	ap = add --patch
	bm = branch --move --force
	br = branch
	brh = "!f() { git branch --force \"$1\" HEAD; }; f"
	cb = checkout -b
	ci = commit
	cia = commit --amend
	co = checkout
	di = diff
	discard = !echo -n 'Remove all untracked files? [y/N]: ' && read 'x' && [ $x = 'y' ] && git checkout --force && git clean -d --interactive
	dl = diff HEAD~1
	ds = diff --staged
	ignore = !git update-index --assume-unchanged
	ignored = !git ls-files -v |grep ^[a-z]
	lg = log --graph
	ll = log -1 HEAD
	lo = log --oneline
	lp = log --patch
	ls = ls-tree --full-tree --name-only -r HEAD
  mxt = merge -X theirs
	pu = push
	puo = push --set-upstream origin
	rao = remote add origin
	rau = remote add upstream
	re = checkout --
	ri = rebase --interactive
	rsuo = remote set-url origin
	sc = switch --create
	st = status
	subu = submodule update --init --recursive
	sw = switch
	unignore = !git update-index --no-assume-unchanged
	unstage = reset HEAD --
[commit]
	gpgsign = true
	verbose = true
[gpg]
	program = gpg
[push]
	default = simple
	autoSetupRemote = true
[pull]
	ff = only
[diff]
	algorithm = histogram
[merge]
	ff = no
	commit = no
	tool = nvimdiff2
	conflitcstyle = zdiff3
[mergetool]
	keepBackup = false
[rerere]
	enabled = true
[url "git@github.com:"]
	insteadOf = https://github.com/
[url "git@salsa.debian.org:"]
	insteadOf = https://salsa.debian.org/
[color]
	ui = auto
[init]
	defaultBranch = master

# vim:noet
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
